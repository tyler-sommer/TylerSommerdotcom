{% extends 'TylerSommerBlogBundle:Admin:base.html.twig' %}

{% set title = 'Menus' %}

{% block content %}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Last Modified</th>
            <th>Date Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('manage_menu_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>{{ entity.type }}</td>
            <td>{% if entity.dateModified %}{{ entity.dateModified }}{% endif %}</td>
            <td>{% if entity.dateCreated %}{{ entity.dateCreated }}{% endif %}</td>
            <td>
                <a class="btn btn-mini" href="{{ path('manage_menu_edit', { 'id': entity.id }) }}">EDIT</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    <a class="btn btn-primary" href="{{ path('manage_menu_new') }}">
    New Menu
</a>
{% endblock %}
