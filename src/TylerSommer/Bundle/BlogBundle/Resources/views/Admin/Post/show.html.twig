{% extends 'TylerSommerBlogBundle:Admin:base.html.twig' %}

{% set title = entity.title ~ ' - Post Summary' %}

{% block content %}
<table class="table summary">
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>Published</th>
            <td>{{ entity.active ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Date Modified</th>
            <td>{{ entity.dateModified|default('Never') }}</td>
        </tr>
        <tr>
            <th>Date Created</th>
            <td>{{ entity.dateCreated }}</td>
        </tr>
    </tbody>
</table>

<p class="form-buttons">
  <a href="{{ path('manage_post_edit', { 'id': entity.id }) }}">
    <button class="btn">Edit Post</button> &nbsp;
    <a href="{{ path('manage_post_preview', { id: entity.id }) }}" target="_blank">Preview</a>
  </a>
</p>
{% endblock %}
